{% extends 'base.jinja2' %}

{% block content %}
<h1>Update post</h1>
<form method="POST">
	<div>
		<label for="title">Title</label>
		<input type="text" name="title" id="title" value="{{ title }}" />
	</div>

	<div>
		<label for="content">Content</label>
		<textarea name="content" id="content">{{ content }}</textarea>
	</div>

	<div>
		<input type="submit">
	</div>
</form>
{% endblock %}